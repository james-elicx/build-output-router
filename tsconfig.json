{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2017",
		"module": "ESNext",
		"types": ["node"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"stripInternal": true,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["**/*.ts"]
}
